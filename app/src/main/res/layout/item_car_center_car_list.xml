<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:background="@color/background_color">

    <ImageView
        android:id="@+id/ivCarIcon"
        android:layout_width="125dp"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:scaleType="fitXY"
        android:src="@drawable/default_bg_ratio_1"/>

    <TextView
        android:id="@+id/tvCarName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/ivCarIcon"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_toRightOf="@id/ivCarIcon"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="丰田 埃尔法（进口）2015 3.5L
    自动尊贵版"
        android:textColor="@color/main_text_color"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/tvCarDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvCarName"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/ivCarIcon"
        android:text="2015/2.0万公里"
        android:textColor="@color/second_text_color"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/ivCarIcon"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/ivCarIcon"
        android:text="68.00万"
        android:textColor="@color/main_color"
        android:textSize="14sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/divider_color"/>

</RelativeLayout>