<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/background_color"
              android:orientation="vertical">

    <include layout="@layout/user_inner"/>

    <TextView
        android:id="@+id/tv_post_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:text="车主说的内容车主说的内容车主说的内容车主说的内容车主说的内容车主说的内容"
        android:textColor="@color/main_text_color"
        android:textSize="15sp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/border_comment_reply">

        <ImageView
            android:id="@+id/iv_car_image"
            android:layout_width="118dp"
            android:layout_height="77dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:scaleType="fitXY"
            android:src="@drawable/default_bg_ratio_1"/>

        <TextView
            android:id="@+id/tv_car_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/iv_car_image"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@id/iv_car_image"
            android:text="丰田 埃尔法（进口）2015 3.5L 自动尊贵版"
            android:textColor="@color/main_text_color"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tv_car_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_car_image"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="13dp"
            android:layout_toRightOf="@id/iv_car_image"
            android:text="68.00万"
            android:textColor="@color/main_color"
            android:textSize="14sp"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginTop="20dp"
        android:background="@color/divider_color"/>

</LinearLayout>