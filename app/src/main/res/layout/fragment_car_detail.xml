                    android:textSize="14sp"/>

            </LinearLayout>-->

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@color/divider_color" />

            <TextView
                android:id="@+id/tv_same_style_car"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:text="同款推荐"
                android:textColor="#3a3a3a"
                android:textSize="15sp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view_same_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp" />

            <TextView
                android:id="@+id/tv_same_price_car"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:text="同价推荐"
                android:textColor="#3a3a3a"
                android:textSize="15sp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view_same_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp" />

        </LinearLayout>

    </com.wiserz.pbibi.view.MyScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_watch_vr"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/setting_background_selector"
            android:text="VR看车"
            android:textColor="@color/main_text_color"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/btn_line_contact"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@color/third_background_color"
            android:text="线上联系"
            android:textColor="@color/pure_white_color"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/btn_phone_contact"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@color/main_color"
            android:text="电话联系"
            android:textColor="@color/pure_white_color"
            android:textSize="16sp"/>

    </LinearLayout>

</LinearLayout>