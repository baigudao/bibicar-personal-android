                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="更多细节 "
                    android:textColor="#3a3a3a"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tv_car_more_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(0)"
