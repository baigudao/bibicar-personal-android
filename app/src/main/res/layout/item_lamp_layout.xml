<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp">

        <ImageView
            android:id="@+id/iv_user_photo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:src="@drawable/user_photo"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_user_photo"
            android:layout_width="55dp"
            android:layout_height="22dp"
            android:layout_centerVertical="true"
            android:background="@drawable/border_city_name_short"
            android:gravity="center"
            android:text="新车行！"
            android:textColor="@color/main_color"
            android:textSize="12sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/tv_user_photo"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="恭喜用户：深圳法拉利俱乐部"
                android:textColor="#3a3a3a"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="买到了心仪的pony2017款。买到了心仪的pony2017款。买到了心仪的pony2017款。买到了心仪的pony2017款。"
                android:textColor="#3a3a3a"/>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>