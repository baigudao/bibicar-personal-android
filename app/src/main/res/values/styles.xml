<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item> <!--以前的颜色：@color/colorPrimaryDark-->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/start_pic</item><!--窗口的背景:在应用启动时和xml文件的背景-->
    </style>

    <style name="bottom_tag_style">
        <!-- Customize your theme here. -->
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:drawablePadding">3dp</item>
        <item name="android:background">@null</item><!--这个要留意-->
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_vertical</item>
        <!--<item name="android:layout_marginTop">10dp</item>-->
        <item name="android:textColor">@drawable/bottom_text_color_selector</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="top_tag_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:background">@null</item><!--这个要留意-->
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@drawable/top_text_color_selector</item>
        <item name="android:textSize">18sp</item>
    </style>

